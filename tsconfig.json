{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Modules */
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",

    /* Node environment */
    "lib": ["esnext"],
    // "types": ["node"],

    /* Other Outputs */
    "sourceMap": true,
    "declaration": false,

    /* Strictness */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Compatibility */
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@/*" : ["src/*"],
      "@mw/*" : ["src/middlewares/*"],
      "@utils/*" : ["src/utils/*"],
      "@db/*" : ["src/db/*"],
      "@tables" : ["src/db/schema.ts"],
      "@config/*" : ["src/config/*"],
      "@auth/*" : ["src/features/auth/*"],
      "@users/*" : ["src/features/users/*"],
      "@products/*" : ["src/features/products/*"],
      "@categories/*" : ["src/features/categories/*"],
      "@orders/*" : ["src/features/orders/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
