{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Modules */
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",

    /* Node environment */
    "lib": ["esnext"],
    "types": ["node","jest"],

    /* Other Outputs */
    "sourceMap": true,
    "declaration": false,

    /* Strictness */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Compatibility */
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
